<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Thông tin cá nhân</title>
    <style>
        .form-group { margin-bottom: 15px; }
        label { display: inline-block; width: 150px; }
        .alert { padding: 10px; margin: 10px 0; }
        .success { background-color: #dff0d8; color: #3c763d; }
        .error { background-color: #f2dede; color: #a94442; }
    </style>
</head>
<body>
    <h1>Thông tin cá nhân</h1>
    
    <!-- Hiển thị thông báo -->
    <div th:if="${param.success}" class="alert success">
        Cập nhật thông tin thành công!
    </div>
    
    <div th:if="${error}" class="alert error" th:text="${error}"></div>
    
    <!-- Form cập nhật thông tin -->
    <form th:action="@{/customer-profile}" method="post">
        <input type="hidden" name="currentUsername" th:value="${customer.username}" />
        
        <div class="form-group">
            <label for="username">Tên đăng nhập:</label>
            <input type="text" id="username" name="username" 
                   th:value="${customer.username}" required />
        </div>
        
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" 
                   th:value="${customer.email}" required />
        </div>
        
        <div class="form-group">
            <label for="name">Họ và tên:</label>
            <input type="text" id="name" name="name" 
                   th:value="${customer.name}" required />
        </div>
        
        <div class="form-group">
            <button type="submit">Cập nhật</button>
        </div>
    </form>
</body>
